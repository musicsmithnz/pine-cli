{
  "name": "generator-pine-cli",
  "version": "0.0.1",
  "description":
    "PINE Components. A generator for installing PINE web components adding them to an app and hosting them in a decentralized database. PINE is an acronym for Polymer IPFS Node Express.",
  "homepage": "https://musicsmithnz.github.io/pine-cli",
  "author": "Raymond Smith",
  "keywords": [
    "yeoman-generator",
    "PINE-cli",
    "PINE",
    "polymer",
    "IPFS",
    "node",
    "express",
    "web-components"
  ],
  "devDependencies": {
    "@babel/core": "*7.0.0-beta.40",
    "@babel/preset-env": "*7.0.0-beta.40",
    "@polymer/polymer": "^3.0.0-pre.11",
    "@webcomponents/webcomponentsjs": "^1.1.0",
    "babel-loader": "*7.1.4",
    "express": "^4.16.2",
    "html-webpack-plugin": "^3.0.6",
    "js-yaml": "^3.10.0",
    "request": "^2.83.0",
    "underscore": "^1.8.3",
    "underscore.string": "^3.3.4",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10",
    "yo": "^2.0.1",
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "nsp": "^2.6.3",
    "eslint": "^4.1.0",
    "prettier": "^1.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-config-xo": "^0.18.2",
    "jest": "^22.0.6"
  },
  "scripts": {
    "spinec": "node ./lib/spine_cli/spinec.js",
    "build:dev":
      "webpack --mode development --config config/webpack.config.dev.js",
    "build:prod":
      "webpack --mode production --config config/webpack.config.prod.js",
    "stats": "webpack --profile --json > stats.json",
    "pretest": "nsp check; eslint .; lint-staged",
    "test": "jest"
  },
  "license": "ISC",
  "dependencies": {
    "chai": "^4.1.2",
    "chalk": "^2.1.0",
    "fs-extra": "^5.0.0",
    "gulp": "^3.9.1",
    "mocha": "^5.0.4",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "directories": {
    "docs": "docs",
    "lib": "lib",
    "resources": "resources"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/musicsmithnz/pine-cli.git"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  }
}
